@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard - Library</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    <style>
        body {
            background-color: var(--bg);
            color: var(--text);
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            transition: background-color 0.3s, color 0.3s;
        }

        .navbar {
            background: linear-gradient(135deg, var(--nav1), var(--nav2));
        }

        .navbar-brand, .nav-link {
            color: var(--navtext) !important;
            font-weight: 500;
        }

            .nav-link:hover {
                text-decoration: underline;
            }

        .hover-glow {
            transition: box-shadow 0.3s ease, transform 0.3s ease;
        }

            .hover-glow:hover {
                box-shadow: 0 0 30px rgba(0, 123, 255, 0.25);
                transform: translateY(-4px);
            }

        footer {
            background-color: var(--footer);
            color: var(--footerText);
            padding: 20px 0;
            text-align: center;
        }

        [data-theme="light"] {
            --bg: #f8f9fa;
            --text: #212529;
            --nav1: #0d6efd;
            --nav2: #6610f2;
            --navtext: #ffffff;
            --footer: #212529;
            --footerText: #cccccc;
        }

        [data-theme="dark"] {
            --bg: #121212;
            --text: #e0e0e0;
            --nav1: #000000;
            --nav2: #1c1c1c;
            --navtext: #ffffff;
            --footer: #111;
            --footerText: #888;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Dashboard">Library</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto gap-3">
                    <li class="nav-item"><a class="nav-link" asp-controller="Books" asp-action="Index">Books</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Members" asp-action="Index">Members</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Loans" asp-action="Index">Loans</a></li>
                    <li class="nav-item"><button class="btn btn-sm text-light" onclick="toggleTheme()">🌓</button></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-5">
        <h1 class="display-5 fw-bold mb-4 text-center">Dashboard</h1>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow-sm hover-glow text-center">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-book-half fs-3 text-primary"></i><br />Total Books</h5>
                        <p class="display-6 fw-semibold">1,248</p>
                        <a asp-controller="Books" asp-action="Index" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm hover-glow text-center">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-people fs-3 text-success"></i><br />Registered Members</h5>
                        <p class="display-6 fw-semibold">312</p>
                        <a asp-controller="Members" asp-action="Index" class="btn btn-sm btn-outline-success">View All</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card shadow-sm hover-glow text-center">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-arrow-left-right fs-3 text-warning"></i><br />Active Loans</h5>
                        <p class="display-6 fw-semibold">76</p>
                        <a asp-controller="Loans" asp-action="Index" class="btn btn-sm btn-outline-warning">Manage</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center my-5">
            <i class="bi bi-emoji-frown display-1 text-muted"></i>
            <h3 class="fw-semibold mt-3">No records found</h3>
            <p class="text-muted">Looks like there's nothing here yet. Come back later or add something new.</p>
        </div>
    </main>

    <footer>
        &copy; @DateTime.Now.Year - Library Management System
    </footer>

    <script>
        function toggleTheme() {
            const html = document.documentElement;
            const current = html.getAttribute("data-theme");
            const next = current === "dark" ? "light" : "dark";
            html.setAttribute("data-theme", next);
            localStorage.setItem("theme", next);
        }

        (function () {
            const saved = localStorage.getItem("theme");
            if (saved) {
                document.documentElement.setAttribute("data-theme", saved);
            }
        })();
    </script>
</body>
</html>
